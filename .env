# ============================================================================
# IndustrialMind - Environment Configuration Template
# ============================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# ============================================================================
# Infrastructure Services
# ============================================================================

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_SENSOR_READINGS=sensor-readings
KAFKA_TOPIC_ANOMALY_DETECTED=anomaly-detected
KAFKA_TOPIC_MAINTENANCE_PREDICTIONS=maintenance-predictions
KAFKA_TOPIC_ALERTS=alerts

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=industrialmind-token-123456
INFLUXDB_ORG=industrialmind
INFLUXDB_BUCKET=sensors

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=industrialmind
POSTGRES_USER=admin
POSTGRES_PASSWORD=password123
DATABASE_URL=postgresql://admin:password123@localhost:5432/industrialmind

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Neo4J Configuration (Month 5+)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# ChromaDB Configuration (Month 5+)
CHROMADB_URL=http://localhost:8000

# ============================================================================
# MLOps Configuration
# ============================================================================

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5011
MLFLOW_BACKEND_STORE_URI=postgresql://admin:password123@localhost:5432/mlflow
MLFLOW_ARTIFACT_ROOT=./mlflow/artifacts
MLFLOW_EXPERIMENT_NAME=industrialmind

# DVC Configuration (Month 3+)
DVC_REMOTE=local
DVC_REMOTE_PATH=./data/dvc-storage

# ============================================================================
# Application Configuration
# ============================================================================

# Environment
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Data Simulator Configuration
SIMULATOR_INTERVAL_SECONDS=1
SIMULATOR_NUM_MACHINES=5
SIMULATOR_ANOMALY_PROBABILITY=0.05

# Model Configuration
MODEL_AUTOENCODER_PATH=./models/autoencoder_best.pt
MODEL_TRANSFORMER_PATH=./models/transformer_best.pt
MODEL_THRESHOLD_ANOMALY=0.05
MODEL_INFERENCE_BATCH_SIZE=32

# ============================================================================
# Observability Configuration
# ============================================================================

# Prometheus Configuration
PROMETHEUS_URL=http://localhost:9090

# Grafana Configuration
GRAFANA_URL=http://localhost:3011
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ============================================================================
# Cloud Configuration (Month 9+)
# ============================================================================

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_RESOURCE_GROUP=industrialmind-rg
AZURE_LOCATION=eastus

# Azure Storage Configuration
AZURE_STORAGE_ACCOUNT=industrialmindsa
AZURE_STORAGE_CONTAINER_MODELS=models
AZURE_STORAGE_CONTAINER_DATA=data

# Azure Machine Learning
AZURE_ML_WORKSPACE=industrialmind-mlw
AZURE_ML_COMPUTE_CLUSTER=industrialmind-cluster

# ============================================================================
# External APIs (Month 5+)
# ============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Alert Notification Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_TO=alerts@yourcompany.com

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================================================
# Testing Configuration
# ============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://admin:password123@localhost:5432/industrialmind_test
TEST_KAFKA_BOOTSTRAP_SERVERS=localhost:9092
TEST_INFLUXDB_URL=http://localhost:8086
